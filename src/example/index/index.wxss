.jm-flex {
  align-items: center;
}
.jm-cells {
  margin-top: 0;
  opacity: 0;
  transform: translateY(-50%);
  transition: 0.3s;
  &:before,
  &:after {
    display: none;
  }
  &_show {
    opacity: 1;
    transform: translateY(0);
  }
}
.jm-cell {
  margin: 10px;
  border-bottom: 1px solid #eee;
  padding: 10px;

  &:before {
    right: 15px;
  }
}
.jm-cell__ft {
  display: block;
  position: relative;
}
.kind-list__item {
  margin: 10px 0;
  background-color: #ffffff;
  border-radius: 2px;
  overflow: hidden;
  &:first-child {
    margin-top: 0;
  }
}
.kind-list__img {
  width: 30px;
  height: 30px;
}

.kind-list__item-hd {
  padding: 20px;
  transition: opacity 0.3s;
  &_show {
    opacity: 0.4;
  }
}
.kind-list__item-bd {
  height: 0;
  overflow: hidden;
  &_show {
    height: auto;
  }
}
