<view class="wd-picker {{ size ? 'is-' + size : '' }} {{ alignRight ? 'is-align-right' : '' }} {{ error ? 'is-error' : '' }} custom-class">
  <!--文案-->
  <view
    class="wd-picker__field {{ noHair ? 'is-no-hair' : '' }} {{disabled ? 'wd-picker__field--disabled' : '' }}"
    bindtap="showPopup"
  >
    <view wx:if="{{ label || useLabelSlot }}" class="wd-picker__label custom-label-class" style="{{ labelWidth ? 'min-width:' + labelWidth + ';max-width:' + labelWidth + ';' : '' }}">
      <block wx:if="{{label}}">{{ label }}</block>
      <slot wx:else name="label"></slot>
    </view>
    <view class="wd-picker__value custom-value-class">
      {{ showValue ? showValue : placeholder }}
    </view>
    <wd-icon
      wx:if="{{!disabled && !readonly}}"
      custom-class="wd-picker__arrow"
      name="arrow-right"
    />
  </view>
  <!--弹出层，picker-view 在隐藏时修改值，会触发多次change事件，从而导致所有列选中第一项，因此picker在关闭时不隐藏 -->
  <wd-popup
    show="{{ popupShow }}"
    position="bottom"
    hide-when-close="{{ false }}"
    bind:close="onCancel"
  >
    <!--toolBar-->
    <view class="wd-picker__toolbar" catch:touchmove="noop">
      <!--取消按钮-->
      <view class="wd-picker__action wd-picker__action--cancel" bindtap="onCancel">
        {{ cancelButtonText }}
      </view>
      <!--标题-->
      <view wx:if="{{title}}" class="wd-picker__title">{{ title }}</view>
      <!--确定按钮-->
      <view class="wd-picker__action" bindtap="onConfirm">
        {{ confirmButtonText }}
      </view>
    </view>
    <!--pickerView-->
    <wd-picker-view
      custom-class="custom-view-class"
      id="{{pickerId}}"
      value="{{pickerValue}}"
      columns="{{displayColumns}}"
      loading="{{loading}}"
      visible-item-count="{{visibleItemCount}}"
      item-height="{{itemHeight}}"
      value-key="{{valueKey}}"
      label-key="{{labelKey}}"
      bind:change="pickerViewChange"
    />
  </wd-popup>
</view>